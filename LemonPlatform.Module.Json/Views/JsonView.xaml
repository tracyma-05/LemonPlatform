<UserControl x:Class="LemonPlatform.Module.Json.Views.JsonView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LemonPlatform.Module.Json.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:controls="clr-namespace:LemonPlatform.Module.Json.Controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <ScrollViewer
                Grid.Column="0"
                x:Name="sv"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto">
            <Border BorderBrush="Yellow" BorderThickness="2">
                <controls:TreeSKElement TreeRender="{Binding Render,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>