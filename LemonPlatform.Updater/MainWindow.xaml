<Window x:Class="LemonPlatform.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LemonPlatform.Updater"
        mc:Ignorable="d"
        Title="Lemon Updater" 
        Height="300"
        Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Process" FontWeight="Bold" Margin="0,0,0,10"/>
            <ProgressBar x:Name="progressBar" Height="20" Minimum="0" Maximum="100" Margin="0,0,0,10"/>
            <TextBlock Text="Logs" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="logTextBox" Height="150" IsReadOnly="True" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>